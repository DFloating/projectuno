<h1 class="display-3">Welcome Back</h1>

<% if flash[:error].present? %>
    <h2 class="display-6"><%= flash[:error] %></h2>
<% end %>
<%= form_tag signin_path do %>
    <%= label_tag :email %>
    <%= email_field_tag :email %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag "Sign in" %>
<% end %>